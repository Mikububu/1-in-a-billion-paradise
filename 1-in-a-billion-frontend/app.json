{
  "expo": {
    "name": "1 In A Billion Cursor",
    "slug": "in-a-billion",
    "scheme": "oneinabillion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "scheme": "oneinabillion",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oneinabillion.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.oneinabillion.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-asset",
      "@react-native-community/datetimepicker",
      "expo-audio",
      "expo-video",
      "expo-apple-authentication",
      "expo-image-picker",
      "expo-document-picker",
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "eced09a0-1038-41f6-a46c-1ec085690182"
      }
    },
    "owner": "michaelpw",
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/eced09a0-1038-41f6-a46c-1ec085690182",
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    }
  }
}
